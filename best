/* --- Media Queries for Responsiveness --- */

/* Tablet & Smaller Desktop */
@media (max-width: 1024px) {
    .hero__image {
        right: -100px;
        width: 600px;
        height: 600px;
        top: -100px;
    }

    .hero__content {
        max-width: 450px;
    }
}

/* Mobile */
@media (max-width: 768px) {
    /* Helper Classes for Display Toggling on Mobile */
    .hide-for-mobile {
        display: none;
    }
    .hide-for-desktop {
        display: block;
    }

    h1 {
        font-size: 2rem;
    }
    h2 {
        font-size: 1.8rem;
    }
    h3 {
        font-size: 1.2rem;
    }

    /* Header Mobile */
    .header .container {
        flex-direction: row; /* Keep logo and toggle on one row */
        justify-content: space-between;
        align-items: center;
        gap: 0; /* Remove gap */
    }
    .header__toggle {
        display: block; /* Show hamburger/close icons */
    }
    .header__toggle .icon-hamburger { /* Default state */
        display: block;
    }
    .header__toggle .icon-close { /* Hidden by default */
        display: none;
    }
    /* You'd add JS to toggle 'display: none'/'display: block' for these icons */


    /* Hero Section Mobile */
    .hero {
        padding-top: 0; /* Remove top padding */
        min-height: auto; /* Allow height to adjust */
        text-align: center; /* Center content, this ensures the button is centered */
    }
    .hero .container {
        flex-direction: column-reverse; /* Image above content */
        justify-content: flex-start; /* Align from top */
    }
    .hero__content {
        max-width: 100%;
        margin-bottom: 0;
        padding: 0 20px 40px; /* Adjusted bottom padding to the content area */
    }
    .hero__content h1 {
        font-size: 2.2rem; /* Adjust mobile heading size */
    }
    .hero__content p {
        font-size: 1rem; /* Adjust mobile paragraph size */
        margin-bottom: 30px; /* Increased gap below paragraph for button (was 15px) */
    }
    .hero__image {
        position: relative; /* Back to normal flow */
        top: auto;
        right: auto;
        width: 100%;
        height: auto;
        z-index: 0;
        overflow: visible; /* Allow mockups to extend beyond its own boundary if needed */
    }
    /* Hide desktop background image for mobile */
    .hero__image-bg.desktop-bg {
        display: none;
    }
    /* Show mobile background image for mobile */
    .hero__image-bg.mobile-bg {
        display: block;
        position: absolute; /* Position relative to .hero */
        width: 100%;
        top: 0; /* Adjust as per design */
        left: 0;
        height: 100%; /* Ensure it covers the area */
        object-fit: cover; /* Cover the container */
        z-index: -1; /* Place behind mockups and content */
    }
    .hero__image-mockups {
        position: relative; /* Relative positioning within the image container */
        top: 0;
        left: 0;
        transform: none; /* Reset transform */
        width: 100%; /* Full width within its container */
        max-width: 350px; /* Limit max width of mockups for mobile */
        margin: -50px auto 0; /* Adjusted margin-top to bring it down */
    }


    /* Features Section Mobile */
    .features, .articles {
        padding: 50px 0; /* Adjusted for mobile */
    }

    /* Mobile specific alignment for features heading and intro */
    .features h2,
    .features__intro {
        text-align: center; /* This ensures the text is centered on mobile */
        margin-left: auto; /* Re-center block on mobile */
        margin-right: auto; /* Re-center block on mobile */
    }
    .features__intro {
        font-size: 0.9rem; /* Smaller text for the paragraph on mobile */
    }


    .features__grid, .articles__grid {
        grid-template-columns: 1fr; /* Single column on mobile */
        text-align: center; /* Center content of grid items */
    }
    .feature-item img {
        margin: 0 auto 25px; /* Center icon */
    }

    .feature-item {
        margin-bottom: 30px;
    }

    .article-card__content {
        padding: 20px;
    }


    /* Footer Mobile */
    .footer .container {
        flex-direction: column;
        align-items: center;
        text-align: center;
        column-gap: 0;
    }
    .footer__col {
        margin-bottom: 30px; /* More space between stacked columns */
    }
    .footer__col--brand {
        align-items: center; /* Center logo and socials */
    }
    .footer__logo img {
        margin-bottom: 25px; /* Adjusted spacing */
    }
    .footer__socials {
        display: flex;
        gap: 15px;
    }
    .footer__socials img {
        height: 20px; /* Size of social icons */
    }
    .footer__col--links {
        margin-bottom: 0; /* Remove default column margin */
    }
    .footer__col--links ul {
        display: flex;
        flex-direction: column;
        align-items: center; /* Center links */
        gap: 10px; /* Space between links */
        margin-bottom: 20px; /* Space between link columns if they stack (or between last link and button if one col) */
    }
    .footer__col--links:first-of-type ul { /* First list of links */
        margin-bottom: 10px; /* Less space between the two link columns */
    }
    .footer__col--action-copyright {
        align-items: center; /* Center button and copyright */
        justify-content: center; /* Center vertically */
        margin-top: 20px; /* Space from links above */
        flex-grow: 0; /* Don't grow to fill space */
    }
    .footer__btn {
        margin-bottom: 20px; /* Space between button and copyright */
    }
    .footer__col--copyright p {
        margin-top: 0; /* No extra top margin needed here */
    }
}
